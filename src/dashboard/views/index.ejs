<%- include('partials/header') %>

<div class="hero-section">
    <div class="hero-content">
        <h1>Your Ultimate Discord Bot</h1>
        <p>A powerful, modular Discord bot with an easy-to-use web dashboard.</p>
        <div class="cta-buttons">
            <% if (!user) { %>
                <a href="/auth/login" class="btn btn-primary"><i class="fab fa-discord"></i> Login with Discord</a>
            <% } else { %>
                <a href="/dashboard" class="btn btn-primary"><i class="fas fa-tachometer-alt"></i> Go to Dashboard</a>
            <% } %>
            <a href="https://discord.com/api/oauth2/authorize?client_id=<%= botStats.clientId %>&permissions=8&scope=bot%20applications.commands" class="btn btn-secondary" target="_blank">
                <i class="fas fa-plus-circle"></i> Add to Server
            </a>
        </div>
    </div>
</div>

<div class="section">
    <div class="section-header">
        <h2>Bot Statistics</h2>
    </div>
    <div class="stats-cards">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-server"></i>
            </div>
            <div class="stat-content">
                <h3>Servers</h3>
                <p><%= botStats.servers %></p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-content">
                <h3>Users</h3>
                <p><%= botStats.users %></p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-signal"></i>
            </div>
            <div class="stat-content">
                <h3>Ping</h3>
                <p><%= botStats.ping %> ms</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-clock"></i>
            </div>
            <div class="stat-content">
                <h3>Uptime</h3>
                <p><%= Math.floor(botStats.uptime / (1000 * 60 * 60 * 24)) %> days</p>
            </div>
        </div>
    </div>
</div>

<div class="section">
    <div class="section-header">
        <h2>Features</h2>
    </div>
    <div class="features">
        <div class="feature">
            <div class="feature-icon">
                <i class="fas fa-bolt"></i>
            </div>
            <div class="feature-content">
                <h3>Fast & Reliable</h3>
                <p>Built with modern technologies for speed and reliability.</p>
            </div>
        </div>
        <div class="feature">
            <div class="feature-icon">
                <i class="fas fa-shield-alt"></i>
            </div>
            <div class="feature-content">
                <h3>Secure</h3>
                <p>Discord OAuth2 authentication and secure data storage.</p>
            </div>
        </div>
        <div class="feature">
            <div class="feature-icon">
                <i class="fas fa-cogs"></i>
            </div>
            <div class="feature-content">
                <h3>Customizable</h3>
                <p>Easily configure bot settings through the dashboard.</p>
            </div>
        </div>
        <div class="feature">
            <div class="feature-icon">
                <i class="fas fa-chart-line"></i>
            </div>
            <div class="feature-content">
                <h3>Statistics</h3>
                <p>Track command usage and server activity.</p>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>