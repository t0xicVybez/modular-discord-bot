<div class="container">
    <div class="row mb-4">
        <div class="col-lg-12">
            <h1 class="display-6">
                <i class="fas fa-terminal me-2"></i> Bot Commands
            </h1>
            <p class="lead">
                Below is a list of all available commands for the bot.
            </p>
        </div>
    </div>
    
    <!-- Search bar -->
    <div class="row mb-4">
        <div class="col-lg-6 mx-auto">
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fas fa-search"></i>
                </span>
                <input type="text" id="commandSearch" class="form-control" placeholder="Search commands...">
            </div>
        </div>
    </div>
    
    <!-- Commands List -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Commands</h5>
                        <span class="badge bg-primary" id="commandCount"><%= commands.length %> Commands</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <% if (commands.length === 0) { %>
                    <div class="alert alert-info m-3">
                        No commands found. Add commands to the bot to see them here.
                    </div>
                    <% } else { %>
                    <div class="list-group list-group-flush" id="commandsList">
                        <% commands.forEach(command => { %>
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">
                                    /<%= command.name %>
                                </h5>
                            </div>
                            <p class="mb-1"><%= command.description %></p>
                            
                            <% if (command.options && command.options.length > 0) { %>
                            <div class="mt-2">
                                <strong>Options:</strong>
                                <div class="table-responsive">
                                    <table class="table table-sm table-bordered mt-2">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Name</th>
                                                <th>Description</th>
                                                <th>Required</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% command.options.forEach(option => { %>
                                            <tr>
                                                <td><code><%= option.name %></code></td>
                                                <td><%= option.description %></td>
                                                <td>
                                                    <% if (option.required) { %>
                                                    <span class="badge bg-danger">Required</span>
                                                    <% } else { %>
                                                    <span class="badge bg-secondary">Optional</span>
                                                    <% } %>
                                                </td>
                                            </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <% } %>
                        </div>
                        <% }); %>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const commandSearch = document.getElementById('commandSearch');
    const commandsList = document.getElementById('commandsList');
    const commandItems = commandsList.querySelectorAll('.list-group-item');
    const commandCounter = document.getElementById('commandCount');
    
    // Search functionality
    commandSearch.addEventListener('keyup', function() {
        const searchTerm = this.value.toLowerCase();
        let visibleCount = 0;
        
        commandItems.forEach(item => {
            const commandName = item.querySelector('h5').textContent.toLowerCase();
            const commandDesc = item.querySelector('p').textContent.toLowerCase();
            
            if (commandName.includes(searchTerm) || commandDesc.includes(searchTerm)) {
                item.style.display = '';
                visibleCount++;
            } else {
                item.style.display = 'none';
            }
        });
        
        // Update the count badge
        commandCounter.textContent = `${visibleCount} Commands`;
    });
});
</script>