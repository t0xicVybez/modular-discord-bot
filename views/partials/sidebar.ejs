<div class="sidebar bg-light border-end">
    <div class="d-flex flex-column flex-shrink-0 p-3 h-100">
        <% if (guild) { %>
        <div class="text-center mb-3">
            <% if (guild.icon) { %>
            <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png?size=96" 
                 alt="<%= guild.name %>" class="rounded-circle img-fluid server-icon mb-2" style="max-width: 80px;">
            <% } else { %>
            <div class="server-icon-placeholder mb-2">
                <%= guild.name.charAt(0) %>
            </div>
            <% } %>
            <h5 class="mb-0"><%= guild.name %></h5>
            <small class="text-muted"><%= guild.memberCount %> members</small>
        </div>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a href="/dashboard/<%= guild.id %>" class="nav-link <%= locals.activeSection === 'overview' ? 'active' : 'text-dark' %>">
                    <i class="fas fa-tachometer-alt me-2"></i>
                    Overview
                </a>
            </li>
            <li class="nav-item">
                <a href="/dashboard/<%= guild.id %>/commands" class="nav-link <%= locals.activeSection === 'commands' ? 'active' : 'text-dark' %>">
                    <i class="fas fa-terminal me-2"></i>
                    Commands
                </a>
            </li>
            <li class="nav-item">
                <a href="/dashboard/<%= guild.id %>/plugins" class="nav-link <%= locals.activeSection === 'plugins' ? 'active' : 'text-dark' %>">
                    <i class="fas fa-puzzle-piece me-2"></i>
                    Plugins
                </a>
            </li>
            
            <!-- Plugin sidebar items -->
            <% if (typeof plugins !== 'undefined' && plugins.length > 0) { %>
                <li><hr class="dropdown-divider"></li>
                <li class="sidebar-heading px-3 mt-2 mb-1 text-muted">
                    <span>Plugins</span>
                </li>
                
                <% plugins.forEach(function(plugin) { %>
                    <% if (plugin.routePrefix) { %>
                        <li class="nav-item">
                            <a href="<%= plugin.routePrefix %>/<%= guild.id %>" 
                               class="nav-link <%= locals.activePlugin === plugin.name ? 'active' : 'text-dark' %>">
                                <i class="fas fa-box-open me-2"></i>
                                <%= plugin.name %>
                            </a>
                        </li>
                    <% } %>
                <% }); %>
            <% } %>
        </ul>
        <hr>
        <div class="dropdown">
            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="serverDropdown" 
               data-bs-toggle="dropdown" aria-expanded="false">
                <strong>Server Settings</strong>
            </a>
            <ul class="dropdown-menu text-small shadow" aria-labelledby="serverDropdown">
                <li><a class="dropdown-item" href="/dashboard/<%= guild.id %>/settings">Settings</a></li>
                <li><a class="dropdown-item" href="/dashboard/<%= guild.id %>/logs">Logs</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="https://discord.com/channels/<%= guild.id %>" target="_blank">
                    Open in Discord <i class="fas fa-external-link-alt fa-xs"></i>
                </a></li>
            </ul>
        </div>
        <% } else { %>
        <div class="text-center mb-3">
            <div class="server-icon-placeholder mb-2">
                <i class="fas fa-server"></i>
            </div>
            <h5 class="mb-0">Server Dashboard</h5>
        </div>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a href="/dashboard" class="nav-link <%= locals.activeSection === 'overview' ? 'active' : 'text-dark' %>">
                    <i class="fas fa-tachometer-alt me-2"></i>
                    Overview
                </a>
            </li>
            <li class="nav-item">
                <a href="/dashboard" class="nav-link <%= locals.activeSection === 'servers' ? 'active' : 'text-dark' %>">
                    <i class="fas fa-server me-2"></i>
                    Servers
                </a>
            </li>
        </ul>
        <% } %>
    </div>
</div>